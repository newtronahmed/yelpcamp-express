<%- include('./partials/header.ejs') %>
<div class="container">
<h1 class="text-center">Edit <%= campground.name %> </h1>
<form  method="post" action="/campgrounds/<%= campground._id%>?_method=PUT" class="w-50 mx-auto">
    <div class="jumbotron">
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input type="text" name='campground[name]' class="form-control" id="exampleInputEmail1" value="<%= campground.name %> " aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Description</label>
          <input type="text" name="campground[description]" class="form-control" id="exampleInputEmail1" value="<%= campground.description %> " aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Image</label>
          <input type="text" name='campground[image]' class="form-control" value="<%= campground.image %> " id="exampleInputPassword1">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Price</label>
          <input type="text" name='campground[price]' class="form-control" value="<%= campground.price %> " id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/" class="text-decoration-none mx-2">Go back</a>
      </div>
    
</form>
</div>